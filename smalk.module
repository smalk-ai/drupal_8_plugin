/**
 * Implements hook_editor_js_settings_alter().
 *
 * Adds smalk-ads attribute to CKEditor 4's extraAllowedContent.
 * This allows the smalk-ads attribute on div elements in CKEditor.
 */
function smalk_editor_js_settings_alter(array &$settings) {
  // Check if we have CKEditor settings.
  if (!isset($settings['editor']['formats'])) {
    return;
  }

  foreach ($settings['editor']['formats'] as $format => &$format_settings) {
    // Only modify CKEditor (4) settings.
    if (!isset($format_settings['editor']) || $format_settings['editor'] !== 'ckeditor') {
      continue;
    }

    // Add smalk-ads to extraAllowedContent.
    // Format: element[attributes]{styles}(classes)
    $smalk_allowed = 'div[smalk-ads,id]';

    if (isset($format_settings['editorSettings']['extraAllowedContent'])) {
      // Append to existing extraAllowedContent if not already there.
      if (strpos($format_settings['editorSettings']['extraAllowedContent'], 'smalk-ads') === FALSE) {
        $format_settings['editorSettings']['extraAllowedContent'] .= '; ' . $smalk_allowed;
      }
    }
    else {
      // Set extraAllowedContent.
      $format_settings['editorSettings']['extraAllowedContent'] = $smalk_allowed;
    }
  }
}

/**
 * Implements hook_page_attachments().
 *
 * Adds the Smalk JavaScript tracker to all pages.
 */
function smalk_page_attachments(array &$attachments) {
  $config = \Drupal::config('smalk.settings');

  // Check if module is enabled.
  if (!$config->get('enabled')) {
    return;
  }

  // Check if tracking is enabled.
  if (!$config->get('tracking_enabled')) {
    return;
  }

  $workspace_key = $config->get('workspace_key');
  if (empty($workspace_key)) {
    return;
  }

  // Skip admin pages if configured.
  if ($config->get('exclude_admin_pages')) {
    $route = \Drupal::routeMatch()->getRouteObject();
    if ($route && $route->getOption('_admin_route')) {
      return;
    }
  }

  // Add the Smalk tracker script.
  $tracker_url = \Drupal\smalk\Api\SmalkApi::getTrackerJsUrl();
  $attachments['#attached']['html_head'][] = [
    [
      '#type' => 'html_tag',
      '#tag' => 'script',
      '#attributes' => [
        'src' => $tracker_url . '?PROJECT_KEY=' . $workspace_key,
        'async' => TRUE,
      ],
    ],
    'smalk_tracker_script',
  ];
}
